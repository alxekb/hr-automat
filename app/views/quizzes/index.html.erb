


<div class="row">
  <div class="col-sm-6">
    <h1>Quizzes</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_quiz_path, class: 'btn btn-primary' do %>
    Add New Quiz
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Description</th>
            
      </tr>
    </thead>

    <tbody>
      <% @quizzes.each do |quiz| %>
        <%= content_tag :tr, id: dom_id(quiz), class: dom_class(quiz) do %>
          
            <td><%= link_to quiz.name, quiz %></td>
          

                      <td><%= quiz.description %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
