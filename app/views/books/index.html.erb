


<div class="row">
  <div class="col-sm-6">
    <h1>Книги</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_book_path, class: 'btn btn-primary' do %>
    Добавить книгу
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            <th>Название</th>
            <th>User</th>
            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <%= content_tag :tr, id: dom_id(book), class: dom_class(book) do %>
          

                      <td><%= book.title %></td>
                      <td><%= book.user.first_name %></td>
          
          
            <td><%= link_to 'Show', book %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
